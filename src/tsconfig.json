{
  "compileOnSave": false,
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "outDir": "../dist/",
    "rootDir": "..",
    "target": "es5",
    "inlineSources": false,
    "mapRoot": "dist",
    "sourceMap": true,
    "inlineSourceMap": false,
    "stripInternal": true
  },

  "files": [
    "main.ts",
    "typings.d.ts"
  ],

  "angularCompilerOptions": {
       "genDir": "aot"
  }
}
